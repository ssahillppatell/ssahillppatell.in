                            ) : null}
                        </div>
                        <ul class="list-disc pl-8 pr-4 pt-4 flex flex-col gap-4">
                            {project.description.map((item) => {
                                return <li>{item}</li>;
                            })}
                        </ul>
                        <ul class="px-4 py-2 flex flex-row gap-x-2 flex-wrap justify-center">
                            {project.skills.map((skill) => {
                                return (
                                    <li>
                                        <img
                                            src={`/icons/${skill}.svg`}
                                            alt={skill}
                                        />
                                    </li>
                                );
                            })}
                        </ul>
                    </section>
                );
            })
        }
    </article>
</Layout>
