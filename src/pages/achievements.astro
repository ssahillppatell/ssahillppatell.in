---
import Layout from '../layouts/Main.astro'

---

<Layout title="achievements">
    <article class="flex flex-col gap-4 sm:gap-6 sm:w-1/3 mx-6 sm:mx-auto min-h-screen">
        {
            globalThis.profileData.achievements.map((achievement) => (
                <div>
                    <span class="uppercase font-extrabold text-xl">{achievement.title}</span>&nbsp;
                    <span>{achievement.description}</span>
                </div>
            ))
        }
    </article>
</Layout>
