<aside class="absolute w-20 h-1/3 top-0 right-0 overflow-hidden">
    <div
        class="absolute top-6 px-4 py-4 bg-primary rounded-md flex flex-col gap-2"
        style={{
            transition: 'right 0.3s',
            right: '-4rem'
        }}
    >
        {
            globalThis.profileData.socials.map((social) => (
                <a href={social.link} target="_blank" rel="noopener noreferrer">
                    <img src=`icons/${social.icon}.svg` />
                </a>
            ))
        }
    </div>
    <script>
        let isSocialOpen = false;
        const socialWidget = document.querySelector<HTMLDivElement>('aside > div')

        function toggleSocial() {
            if (isSocialOpen) {
                socialWidget.style.right = '-4rem';
            } else {
                socialWidget.style.right = '-0.25rem';
            }
            isSocialOpen = !isSocialOpen;
        }
        
        document.querySelector('aside').addEventListener('click', toggleSocial);
    </script>
</aside>